<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_goneMarginBottom="@dimen/_80sdp"
    tools:context=".ui.weather.WeatherCurrentFragment">


    <Button
        android:id="@+id/button_weather_current"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:text="Current"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_weather_location_current"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<TextView
        android:id="@+id/text_weather_current"
        android:layout_width="186dp"
        android:layout_height="73dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/title_weather"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_weather_location_current"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:hint="Text Here"
        app:boxStrokeWidth="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_location_current"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_weather_current"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="@color/secondaryTextColorFade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_weather_location_current"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/fragment_weather_card" />


</androidx.constraintlayout.widget.ConstraintLayout>